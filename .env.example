# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/automation-app

# Social Media Platform Credentials
# Facebook credentials (use either FB_USERNAME/FB_PASSWORD or FBusername/FBpassword)
FB_USERNAME=your_facebook_email@example.com
FB_PASSWORD=your_facebook_password

# Twitter credentials (use either TWITTER_USERNAME/TWITTER_PASSWORD or TWIT_USERNAME/TWIT_PASSWORD)
TWITTER_USERNAME=your_twitter_email@example.com
TWITTER_PASSWORD=your_twitter_password

# Instagram credentials (use either INSTAGRAM_USERNAME/INSTAGRAM_PASSWORD or IG_USERNAME/IG_PASSWORD)
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_complex
REDIS_URL=redis://localhost:6379

# DeepSeek AI API
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1

# Browser Automation Settings
BROWSER_TIMEOUT=30000
BROWSER_HEADLESS=true
KEEP_BROWSER_OPEN=false
HEADLESS=false

# Frontend Configuration (Vite)
VITE_API_URL=http://localhost:3001/api

# Logging
LOG_LEVEL=info

# Additional Twitter automation env vars (optional)
TWIT_USERNAME=your_twitter_email@example.com
TWIT_PASSWORD=your_twitter_password

# Additional Facebook automation env vars (optional)
FBusername=your_facebook_email@example.com
FBpassword=your_facebook_password

# Additional Instagram automation env vars (optional)
IG_USERNAME=your_instagram_username
IG_PASSWORD=your_instagram_password